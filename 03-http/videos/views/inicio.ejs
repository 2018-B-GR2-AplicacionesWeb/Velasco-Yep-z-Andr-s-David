<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Lista de Usuarios</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/css/animate.css">
    <link rel="stylesheet" href="/css/mis_estilos.css">

</head>
<body>
<div class="container">

    <% const existeMensaje = typeof mensaje !== "undefined" ? true : false; %>

    <% if(existeMensaje){ %>

        <div class="animated fadeOut alert alert-<%= clase %>" role="alert">
            MENSAJE: <%= mensaje %>
        </div>

    <% } %>
    <% var apellido = 'Eguez' %>
    <!-- h1 -> Header 1 -->
    <h1> Lista de usuarios  </h1>
    <p>
        Crea, edita , busca y borra los registros de la tabla.
    </p>
    <!-- p -> parrafo -->

    <!-- a -> anchor-->


    <script>
        function holaMundo(evento) {
            console.log(evento)

            evento.preventDefault();

            const respuesta = confirm('¿Estas seguro?')

            console.log('Hola mundo')
        }

        function borrar(evento){

            const respuesta = confirm('¿Estas seguro?')

            if(!respuesta){
                event.preventDefault();
            }

        }



    </script>




            <form action="/Usuario/inicio"
                  method="get">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="form-group">
                            <label for="busqueda">Busqueda</label>
                            <input id="busqueda" type="text" name="busqueda" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <button class="btn btn-outline-info btn-block boton-buscar" type="submit">Buscar</button>
                        <a class="quitar-decoracion" href="/Usuario/crear-usuario">
                            <button class="btn btn-outline-success btn-espaciado btn-block">Crear Usuario</button>
                        </a>
                    </div>
                </div>
            </form>




    <h2> Arreglo </h2>

    <!-- ul -> unordered list-->
    <!-- ol -> ordered list-->
    <!-- li -> list item -->
    <!--
<ul>
<% //arreglo.forEach((numero)=>{    %>
    <li><%= // numero   %></li>
<%    // })     %>
</ul>
-->


    <table class="table table-hover animated fadeInUp">
        <caption>Lista de usuarios</caption>
        <!-- tr -> table row -->
        <thead>
            <tr>
            <!-- th -> table header -->
                <th width="10%">Nombre</th>
                <th width="50%">Biografía</th>
                <th width="30%">Acciones</th>
            </tr>
        </thead>
        <!-- tr -> table row -->
        <% arreglo.forEach((usuario)=>{ %>
        <tbody>
            <tr>
                <!-- td -> table detail -->
                <td><%= usuario.nombre %></td>
                <td><%= usuario.biografia %></td>
                <td>
                    <form action="/Usuario/borrar/<%= usuario.id %>"
                          method="post"
                    >
                        <!--<button type="button">Yo no</button>-->
                        <!--<button>Yo si</button>-->
                        <button class="btn btn-outline-danger btn-block btn-espaciado" type="submit"
                                onclick="borrar(event)">Eliminar</button>
                    </form>
                    <a class="quitar-decoracion" href="/Usuario/actualizar-usuario/<%= usuario.id %>">
                        <button class="btn btn-outline-info btn-block btn-espaciado">Actualizar</button>
                    </a>
                </td>
            </tr>
        </tbody>
        <% }) %>
    </table>

</div>
</body>
</html>